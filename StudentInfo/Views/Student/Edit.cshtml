@{
}

@model StudentInfo.Models.Entities.Student

<h1>Edit Student Info</h1>

@if ( Model is null )
{
    <p>No Student</p>
}
else
{
<form method="post">
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Age</label>
        <input type="text" class="form-control" asp-for="Age" />
    </div>

    <div class="mt-3">
        <label class="form-label">Year</label>
        <input type="text" class="form-control" asp-for="Year" />
    </div>

    <div class="mt-3">
        <label class="form-label">Section</label>
        <input type="text" class="form-control" asp-for="Section" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Student">Delete</button>
    </div>
</form>
}